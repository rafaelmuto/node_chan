extend ./layouts/mainLayout.pug
block content
    div.main
            h1 ᶘ ᵒᴥᵒᶅ node_chan
            hr
            form(action="/upload" method="POST" enctype="multipart/form-data")
            label(for="userName") user:
            input(type="text" name="userName")
            label(for="email") e-mail:
            input(type="email" name="email")
            label(for="deleteCode") delete code:
            input(type="password", name="deleteCode")
            label(for="postMessage") message:
            textarea(name="postMessage", cols="30", rows="10")
            label(for="postImage") image:
            input(type="file" name="postImage")
            button( type="submit") upload
    br
    hr
    if posts.length > 0
        each post in posts
            p #{post._id} @ #{post.date} by #{post.username}
            p message: #{post.message}
            a(href="images/"+post.image.fileName)
                img(src="images/thumbnails/" + post.image.fileName)
            hr
    else 
        p 【・ヘ・?】no posts...